{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/update-profile",
      "destination": "/api/profiles/update"
    }
  ],
  "functions": {
    "api/**/*.{ts,js}": {
      "includeFiles": "server-build/server/**"
    }
  },
  "crons": [
    {
      "path": "/api/signals/trigger-detection",
      "schedule": "0 6 * * *"
    }
  ]
}
