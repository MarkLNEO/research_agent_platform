{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/update-profile",
      "destination": "/api/profiles/update"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.{ts,js}": {
      "includeFiles": "server-build/server/**"
    }
  },
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, must-revalidate" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/signals/trigger-detection",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/memory/rollup",
      "schedule": "0 */6 * * *"
    }
  ]
}
