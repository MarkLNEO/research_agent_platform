{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "server-build",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": true,
    "sourceMap": false,
    "noEmitOnError": false
  },
  "include": ["server/routes/**/*.ts", "server/routes/**/*.tsx", "lib/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-ssr", "server-build", "server/routes/router.ts", "server/dev-api.ts"]
}
